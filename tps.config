[UNITS]
size_unit = nanometers
time_unit = picoseconds
temp_unit = kelvin
press_unit = bar

[SYSTEM]
nonbondedMethod = PME
nonbondedCutoff = 1.1
ewaldErrorTolerance = 0.00001
constraints = HBonds
rigidWater = True
constraintTolerance = 0.0001

[INTEGRATOR]
dt = 0.002
temperature = 300
friction = 5.0
pressure = 1.0
barostatInterval = 25

[PLATFORM]
# platform = CUDA
platform = CPU

[PLATFORM_PROPERTIES]
# Precision = mixed

[OPS_OPTIONS]
n_steps_per_frame = 50
n_frames_max = 17500

# Base pair indices
[BP_INDICES]
resid_1 = 6
resid_2 = 16

# WC state definition
[WC_STATE]
d_WC_min = 0.0
d_WC_max = 0.3
d_BP_min = 0.0
d_BP_max = 0.3
angle_WC_min = 165
angle_WC_max = 180
angle_WC_units = degrees
angle_ON_min = 165
angle_ON_max = 180
angle_ON_units = degrees
a_Plane_min = 0
a_Plane_max = 20

# HG state definition
[HG_STATE]
d_HG_min = 0.0
d_HG_max = 0.3
d_BP_min = 0.0
d_BP_max = 0.3
angle_HG_min = 155
angle_HG_max = 180
